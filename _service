    </service>
    <service name="perl_regex" mode="buildtime">
        <param name="file">*.spec</param>
        <param name="regex">s/.*CHOOSE:.*/%pytest/g;
          s/(# SECTION test requirements)/\1\nBuildRequires: %{python_module pytest}\n/g;
